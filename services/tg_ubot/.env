# .env.example

# Telegram API Credentials
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=your_phone_number

# Telegram Channel and Chat IDs
TELEGRAM_CHANNEL_ID=your_channel_id
TELEGRAM_CHAT_ID=your_chat_id

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Logging Configuration
LOG_FILE=logs/userbot.log
LOG_LEVEL=INFO

# Media Directory
MEDIA_DIR=media

# Transition times (24-hour format)
TRANSITION_START_TO_NIGHT=20:00
TRANSITION_END_TO_NIGHT=22:00
TRANSITION_START_TO_DAY=06:00
TRANSITION_END_TO_DAY=08:00

# Delay Configuration (in seconds)
# Chat Delays
CHAT_DELAY_MIN_DAY=2.0
CHAT_DELAY_MAX_DAY=7.0
CHAT_DELAY_MIN_NIGHT=5.0
CHAT_DELAY_MAX_NIGHT=12.0

# Channel Delays
CHANNEL_DELAY_MIN_DAY=5.0
CHANNEL_DELAY_MAX_DAY=10.0
CHANNEL_DELAY_MIN_NIGHT=10.0
CHANNEL_DELAY_MAX_NIGHT=20.0
